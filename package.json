{
    "name": "typedec",
    "version": "0.0.1",
    "description": "Runtime type validation for TypeScript",
    "main": "build/index.js",
    "scripts": {
        "precommit": "npm run lint",
        "test": "jest --watch",
        "test:ci": "jest --coverage --forceExit --detectOpenHandles",
        "lint": "tslint -p tsconfig.json './src/**/*.ts' './__tests__/**/*.ts'"
    },
    "keywords": [
        "typescript",
        "types",
        "validation",
        "runtime",
        "decorators"
    ],
    "license": "MIT",
    "dependencies": {
        "reflect-metadata": "0.1.12"
    },
    "devDependencies": {
        "@types/jest": "23.3.2",
        "@types/node": "10.10.0",
        "husky": "0.14.3",
        "jest": "23.6.0",
        "ts-jest": "23.1.4",
        "tslint": "5.11.0",
        "tslint-eslint-rules": "5.4.0",
        "typescript": "3.0.3"
    }
}
