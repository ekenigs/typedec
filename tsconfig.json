{
  "compilerOptions": {
    "allowJs": true,
    "allowUnusedLabels": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
